
include "install_ubuntu.testo"

flash my_flash {
	fs: "fat"
	size: 32Mb
}

flash my_another_flash {
	fs: "fat"
	size: 32Mb
}

test plug_flash: install_ubuntu_server {
	my_ubuntu_server {
		plug flash my_flash;
		sleep 5s
		abort "stop here"
	}
}

test plug_already_plugged_flash: install_ubuntu_server {
	my_ubuntu_server {
		plug flash my_flash;
		sleep 5s
		plug flash my_flash;
	}
}

test plug_already_plugged_flash_2: install_ubuntu_server {
	my_ubuntu_server {
		plug flash my_flash;
		sleep 5s
		plug flash my_another_flash;
	}
}

flash my_flash_with_files {
	fs: "ntfs"
	size: 6Gb
	folder: "/opt/flash_folder"
}

test plug_flash_with_files: install_ubuntu_server {
	my_ubuntu_server {
		plug flash my_flash_with_files;
		sleep 5s
		abort "stop here"
	}
}