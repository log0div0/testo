machine basic_machine {
	cpus: 1
	ram: 512Mb
	iso: "/opt/ubuntu-16.04.6-server-amd64.iso"
	disk main: {
		size: 4Gb
	}
}

flash unexisting_folder {
	fs: "vfat"
	size: 16Mb
	folder: "/some/unexisting_folder"
}

test flash_unexisting_folder {
	basic_machine {
		plug flash unexisting_folder
	}
}

flash not_a_folder {
	fs: "vfat"
	size: 16Mb
	folder: "/opt/ubuntu-16.04.6-server-amd64.iso"
}

test flash_not_a_folder {
	basic_machine {
		plug flash not_a_folder
	}
}

flash basic_flash {
	fs: "vfat"
	size: 8Mb
}

[no_snapshots: true]
test create_basic_flash {
	basic_machine {
		plug flash basic_flash
		unplug flash basic_flash
	}
}