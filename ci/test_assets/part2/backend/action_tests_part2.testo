
include "../../part1/backend/action_tests_part1.testo"

flash my_flash {
	fs: "fat"
	size: 32Mb
}

test plug_flash: install_ubuntu_server {
	my_ubuntu_server {
		plug flash my_flash;
		sleep 5s
		abort "stop here"
	}
}

flash my_flash_with_files {
	fs: "ntfs"
	size: 6Gb
	folder: "/opt/flash_folder"
}

test plug_flash_with_files: install_ubuntu_server {
	my_ubuntu_server {
		plug flash my_flash_with_files;
		sleep 5s
		abort "stop here"
	}
}