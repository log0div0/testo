
include "debian.testo"

[snapshots: "never"]
test debian_nn_server_service_checks: debian_install_testo {
	debian {
		exec bash """
			service testo-nn-server status
		"""

		exec bash """
			service testo-nn-server stop
			!(service testo-nn-server status)
		"""

		exec bash """
			service testo-nn-server start
			service testo-nn-server status
		"""

		exec bash """
			service testo-nn-server restart
			service testo-nn-server status
		"""

		stop; start

		wait "Log In"

		type "root"; press Tab; sleep 1s
		type "${password}"; press Enter
		sleep 3s

		exec bash """
			service testo-nn-server status
		"""
	}
}