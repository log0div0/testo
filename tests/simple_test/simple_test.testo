machine my_machine {
	cpus: 1
	ram: 512Mb
	iso: "some_iso"
	disk_size: 4Gb
	nic nat: {
		slot: 0
		attached_to: "nat"
		adapter_type: "e1000"
	}

	nic LAN: {
		slot: 1
		attached_to: "internal"
		network: "net1"
		mac: "52:54:00:00:00:11"
		adapter_type: "e1000"
	}

	metadata: {
		login: "my_machine_login"
		password: "1111"
		host_name: "my-machine"
	}
}

[no_snapshots]
test simple_test {
	my_machine start
}
