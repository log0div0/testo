network nat {
	mode: "nat"
}

network net1 {
	mode: "internal"
}

machine my_machine {
	cpus: 1
	ram: 512Mb
	iso: "../iso.iso"
	disk_size: 4Gb
	nic nat: {
		attached_to: "nat"
		adapter_type: "e1000"
	}

	nic LAN: {
		attached_to: "net1"
		mac: "52:54:00:00:00:11"
		adapter_type: "e1000"
	}

	metadata: {
		login: "my_machine_login"
		password: "1111"
		host_name: "my-machine"
	}
}

test parent_test {
	my_machine {
		start
		stop
		print "${host_name}"
		print "Some string"
	}
}

test child_test: parent_test  {
	my_machine {
		start
		print "${login}"
	}
}
